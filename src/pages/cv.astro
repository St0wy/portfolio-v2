---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Resume">
	<div class="mb-5">
		<div class="text-4xl w-full font-bold">Curriculum vit√¶</div>
	</div>
	<div class="my-8">
		<a class="btn mr-1" href="/CV_Huber_En.pdf" target="_blank"> PDF EN </a>
		<a class="btn" href="/CV_Huber_Fr.pdf" target="_blank"> PDF FR </a>
	</div>
	<div class="mb-5">
		<div class="text-3xl w-full font-bold">Education</div>
	</div>

	<div class="time-line-container grid gap-4 mb-10">
		<TimeLineElement
			title="Game Programming - Bachelor"
			subtitle="2021 to 2024 at SAE Institute, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>Thesis: Voxel rendering using Ray Tracing</li>
				<li>Game creation (Unity, Unreal, C++)</li>
				<li>Physics Programming</li>
				<li>Networking</li>
				<li>Optimisation</li>
				<li>Graphics Programming</li>
			</ul>
		</TimeLineElement>
		<TimeLineElement
			title="Informatics - ES Technician Diploma"
			subtitle="2019 to 2021 at CFPT, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>Niveau : Honours and congratulation of the jury</li>
				<li>Strengthened skills from CFC</li>
				<li>C</li>
				<li>Rust</li>
				<li>React Native</li>
				<li>VueJS</li>
				<li>Project Management and Marketing</li>
			</ul>
		</TimeLineElement>
		<TimeLineElement
			title="Informatics - CFC (Apprenticeship)"
			subtitle="2016 to 2020 at CFPT, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>Fundamentals of Programming (C#, Python)</li>
				<li>Object Oriented Programming</li>
				<li>Web Dev (HTML, CSS, JS, PHP, Laravel)</li>
				<li>Git</li>
				<li>DB (MySQL, SQLite)</li>
				<li>SCRUM</li>
				<li>Documentation Creation</li>
			</ul>
		</TimeLineElement>
	</div>

	<div class="mb-5">
		<div class="text-3xl w-full font-bold">Experience</div>
	</div>

	<div class="time-line-container grid gap-4 mb-10">
		<TimeLineElement
			title="Help Desk Technician"
			subtitle="From Jan 2024 to Today at Pictet, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>Assistance in resolving computer issues for the group</li>
				<li>
					Contributed to IT system maintenance and troubleshooting
				</li>
				<li>
					Demonstrated strong communication skills in remote technical
					support
				</li>
			</ul>
		</TimeLineElement>
		<TimeLineElement
			title="Android Developper"
			subtitle="From Feb to Oct 2022 at JE EPFL, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>React Native Android Application</li>
				<li>Design on Figma</li>
				<li>Translated R code to TypeScript</li>
			</ul>
		</TimeLineElement>
		<TimeLineElement
			title="Video Game Creation and Robotics Teaching"
			subtitle="August 2021 at Futurekids, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>Two one week lessons</li>
				<li>Taught the basics of programming to children</li>
				<li>Unreal Engine 5 and Lego EV3 MINDSTORMS</li>
			</ul>
		</TimeLineElement>
		<TimeLineElement
			title="Web Developpement - Internship"
			subtitle="May 2020 at Thinko, Geneva, Switzerland"
		>
			<ul class="list-disc mx-6">
				<li>Three week internship</li>
				<li>Web dev with Laravel</li>
				<li>Evaluation and integration of planning solutions</li>
			</ul>
		</TimeLineElement>
	</div>

	<div class="mb-5">
		<div class="text-3xl w-full font-bold">Languages</div>
	</div>

	<ul class="list-disc mx-6">
		<li>French (Native)</li>
		<li>English</li>
		<li>Japanese (Elementary)</li>
	</ul>

	<div class="my-5">
		<div class="text-3xl w-full font-bold">Programming Languages</div>
	</div>

	<ul class="list-disc md:columns-5 columns-2 mx-6">
		<li>C++</li>
		<li>Rust</li>
		<li>Jai</li>
		<li>C#</li>
		<li>JavaScript</li>
		<li>TypeScript</li>
		<li>Python</li>
		<li>HTML/CSS</li>
		<li>PHP</li>
		<li>SQL</li>
	</ul>

	<div class="my-5">
		<div class="text-3xl w-full font-bold">Tools</div>
	</div>

	<ul class="list-disc md:columns-5 columns-2 mx-6">
		<li>Unity</li>
		<li>Unreal Engine</li>
		<li>React Native</li>
		<li>Astro</li>
		<li>Git</li>
		<li>Perforce</li>
		<li>Scrum</li>
		<li>Agile</li>
		<li>Office Suite</li>
	</ul>
</BaseLayout>
